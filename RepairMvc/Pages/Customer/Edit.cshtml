@page
@model RepairMvc.Pages.Customer.EditModel

@{
    ViewData["Title"] = "Edit";
    var photoPath = "/images/" + (Model.Order.PhotoPath ?? "noimage.jpg");

}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">


    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Order.OrderRef)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.OrderRef)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Order.Address)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.Address)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Order.City)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.City)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Order.Postcode)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.Postcode)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Order.Status)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.Status)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Order.HoursWorked)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.HoursWorked)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Order.BeginDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.BeginDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Order.EndDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.EndDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Order.WorkReport)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.WorkReport)
    </dd>
    @if (Model.Order.PartID1 != null || Model.Order.PartID2 != null || Model.Order.PartID3 != null
|| Model.Order.PartID4 != null || Model.Order.PartID5 != null || Model.Order.PartID6 != null
|| Model.Order.PartID7 != null || Model.Order.PartID8 != null)
    {

        <dt class="col-sm-2"><u>Part Name</u></dt>
        <dd class="col-sm-10"><u>Part Quantity</u></dd>

        if (Model.Order.PartID1 != null)
        {
            <dt class="col-sm-2">
                <label class="control-label">@ViewBag.PartID1</label>
            </dt>
            <dd class="col-sm-10">
                <label class="control-label">@Model.Order.Part1Quantity</label>
            </dd>
        }
        if (Model.Order.PartID2 != null)
        {
            <dt class="col-sm-2">
                <label class="control-label">@ViewBag.PartID2</label>
            </dt>
            <dd class="col-sm-10">
                <label class="control-label">@Model.Order.Part2Quantity</label>
            </dd>
        }
        if (Model.Order.PartID3 != null)
        {
            <dt class="col-sm-2">
                <label class="control-label">@ViewBag.PartID3</label>
            </dt>
            <dd class="col-sm-10">
                <label class="control-label">@Model.Order.Part3Quantity</label>
            </dd>
        }
        if (Model.Order.PartID4 != null)
        {
            <dt class="col-sm-2">
                <label class="control-label">@ViewBag.PartID4</label>
            </dt>
            <dd class="col-sm-10">
                <label class="control-label">@Model.Order.Part4Quantity</label>
            </dd>
        }
        if (Model.Order.PartID5 != null)
        {
            <dt class="col-sm-2">
                <label class="control-label">@ViewBag.PartID5</label>
            </dt>
            <dd class="col-sm-10">
                <label class="control-label">@Model.Order.Part5Quantity</label>
            </dd>
        }
        if (Model.Order.PartID6 != null)
        {
            <dt class="col-sm-2">
                <label class="control-label">@ViewBag.PartID6</label>
            </dt>
            <dd class="col-sm-10">
                <label class="control-label">@Model.Order.Part6Quantity</label>
            </dd>
        }
        if (Model.Order.PartID7 != null)
        {
            <dt class="col-sm-2">
                <label class="control-label">@ViewBag.PartID7</label>
            </dt>
            <dd class="col-sm-10">
                <label class="control-label">@Model.Order.Part7Quantity</label>
            </dd>
        }
        if (Model.Order.PartID8 != null)
        {
            <dt class="col-sm-2">
                <label class="control-label">@ViewBag.PartID8</label>
            </dt>
            <dd class="col-sm-10">
                <label class="control-label">@Model.Order.Part8Quantity</label>
            </dd>
        }

    }

    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderId" />
            <input type="hidden" asp-for="Order.PhotoPath" />

            <div class="form-group">
                <label asp-for="Order.Description" class="control-label"></label>
                <textarea asp-for="Order.Description" class="form-control"></textarea>
                <span asp-validation-for="Order.Description" class="text-danger"></span>
            </div>

            <div class="form-group row col-sm-4 offset-4" height: 200px; width: auto;>
                <img class="imageThumbnail" src="@photoPath" asp-append-version="true" height: 200px; width: auto;/>
            </div>

            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="custom-file-input form-control">
                        <label class="custom-file-label">Click here to change photo</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}
